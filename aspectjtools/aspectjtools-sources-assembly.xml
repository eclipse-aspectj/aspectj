		</fileSet>
		<fileSet>
			<directory>../ajdoc/src/main/java</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../org.aspectj.ajdt.core/src/main/java</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../taskdefs/src/main/java</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>

		<!-- Dependencies -->
		<fileSet>
			<directory>target/unzipped-sources</directory>
			<outputDirectory>.</outputDirectory>
		</fileSet>

	</fileSets>

</assembly>
